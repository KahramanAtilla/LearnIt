
<!-- Swiper -->
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <%= image_tag('banner.jpg', class: 'banner') %>
      </div>
      <div class="swiper-slide">
        <%= image_tag('banner2.jpg', class: 'banner') %>
      </div>
      <div class="swiper-slide">
        <%= image_tag('banner3.jpg', class: 'banner') %>
      </div>
      <div class="swiper-slide">
        <%= image_tag('banner4.jpg', class: 'banner') %>
      </div>
    </div>
  </div>

  <h2 class="title mb-4">
    Learn it te permet :
  </h2>

  <div class="cards-icon">
    <div class="card-icon">
      <%= image_tag('world.svg', class: "width_50") %>
      <p>
        <br>
        De consulter des cours partout dans le monde
      </p>
    </div>
    <div class="card-icon">
      <%= image_tag('laptop.svg', class: "width_50") %>
      <p>
        <br>
        De partager tes meilleures ressources
      </p>
    </div>
    <div class="card-icon">
      <%= image_tag('thought.svg', class: "width_50") %>
      <p>
        <br>
        De participer au développement du savoir
      </p>
    </div>
  </div>


  <div class="container mt-4" >
    <div class="card">
      <div class="row banniere">
        <div class="col-8">
          <div class="card-body">
          <% Lesson.all.each do |lesson| %>
            <h4 class="card-title"><%= lesson.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= lesson.topic.name %></h6>
            <h6 class="card-subtitle mb-2 text-muted"> <%= "Leçon de : " %><%= lesson.user.first_name %> <%= lesson.user.last_name %></h6>
            <p class="card-text"><%= lesson.content %></p>
            <div class="btn-group">
              <%= link_to "Consulter ce cours", lesson_path(lesson.id), class: "btn btn-primary" %>
            </div>
            <br></br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

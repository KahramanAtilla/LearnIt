<!DOCTYPE htmL>

<html>
  <body>
  <div class="container mt-4" >
    <div class="card shadow-lg">
      <div class="row banniere">
        <div class="col-8">
          <div class="card-body">
          <% Lesson.all.each do |lesson| %>
            <h4 class="card-title"><%= lesson.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= lesson.topic.name %></h6>
            <p class="card-text"><%= lesson.content %></p>
            <div class="btn-group">
              <%= link_to "En savoir plus", lesson_path(lesson.id), class: "btn btn-primary" %> 
            </div>
            <br></br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
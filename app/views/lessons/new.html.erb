<div class="center mt-4" >
<h2 class="text-black title mb-4">
    Ajoute un cours :
  </h2>
<%= form_tag url_for(action:'create'), method: "post", :rows => 10, style: 'width:100%;' do %>
  <% if @lesson.errors.any? %>
  <div class="card-error">
  <h5> Ta ressource n'a pas été ajoutée car : </h5>
  <% @lesson.errors.full_messages.each do |m| %>
  <%= m %>
  <br/>
  <% end %>
  </div>
  <br/>
  <% end %>
  <%= label_tag 'Titre de ta ressource' %><br>
  <small> 5 caractères minimum </small><br/>
  <%= text_field_tag 'title' %>
  <br /> <br />
  <%= label_tag 'Matière' %><br>
  <%= select_tag "top", options_from_collection_for_select(@topics, "id", "name", "1"), class: "form-control" %>
  <br /> <br />
  <%= label_tag 'Contenu de ta ressource' %><br>
  <small> 50 caractères minimum </small><br/>
  <%= text_area_tag 'content', @content, rows: 30, cols: 130 %>
  <br /> <br />
  <%= submit_tag "Partage ta ressource", class: "btn btn-primary" %>
<% end %>
</div>

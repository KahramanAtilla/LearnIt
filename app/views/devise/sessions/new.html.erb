<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white ">
        <div class="col-sm-6 offset-sm-3 text-center">
          <br>
          <h1 class="text-center"> Connectez vous </h1>
          <br>
          <div class="info-form">
          <div>
            <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div>
            <br>
            <%= f.password_field :password, placeholder: "Mot de passe", autocomplete: "new-password", class:"form-control" %>
          </div>
          <br>
          <% if devise_mapping.rememberable? %>
            <div class="col-6 float-sm-left text-left text-truncate pb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :Se_souvenir_de_moi, class:"text-black-50" %>
            </div>
          <% end %>
          <br></br>
          <div>
            <%= f.submit "Connexion", class:"btn btn-success" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
          </div>
          </div>
        </div>
      </div>
      </div>
              
  
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white ">
        <div class="col-sm-6 offset-sm-3 text-center">
          <br>
          <h2 class="text-center section-title"> Mot de passe oublié ? </h2>
          <div class="info-form">
          <div>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder: "Email avec lequel tu t'es inscrit", autocomplete: "email", class:"form-control"%>
          </div>
          <br>
          <div >
            <%= f.submit "Envoyer le lien de réinitialisation", class: "btn btn-primary py-3 px-5 btn-pill" %>
          </div>
          
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
        </div>
      </div>
    </div>
    </div>
            

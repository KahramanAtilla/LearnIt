<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>  
<section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white ">
        <div class="col-sm-6 offset-sm-3 text-center">
          <br>
          <h2 class="text-center text-black"> Inscris-toi</h2>
          <div class="info-form">
            <div>
                <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
            <div>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, placeholder: "Mot de passe", autocomplete: "new-password", class:"form-control" %>
              <br>
            </div>
            <div>
              <%= f.password_field :password_confirmation, placeholder: "Confirme ton mot de passe", autocomplete: "new-password", class:"form-control" %>
            </div>
            <br>
            <div>
              <%= f.submit "S'inscrire", class:"btn btn-primary py-3 px-5"  %>
            </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    </div>
            

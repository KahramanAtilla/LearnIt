  <h2 class="text-black title mb-4">
    Cours que j'ai partagé(s) sur Learn it:
  </h2>
 <% @all_my_lessons.each do |lesson| %>
            <div class="element">
              <div class="card-body">
                <div class="text-card">
                  <h4 class="card-title"><%= lesson.title %></h4>
                  <h6 class="card-subtitle mb-2 text-muted"><%= lesson.topic.name %></h6>
                  <h6 class="card-subtitle mb-2 text-muted"> <%= "Leçon de moi-même" %></h6>
                  <p class="card-text"><%= strip_tags(lesson.content[0..90]) %></p>
                </div>
                <div class="btn-card">
                  <div class="btn-group">
                  <% if current_user %>
                      <%= link_to "Consulter", lesson_path(lesson.id), class: "btn btn-primary btn-index"  %>
                      <%= link_to 'Supprimer', lesson_path(lesson.id), method: :delete, data: { confirm: 'Supprimer le cours ?' }, class: "btn btn-primary btn-index ml-1" %>
                  <% else %>
                      <%= link_to "Connecte-toi pour consulter", new_user_session_path, class: "btn btn-primary btn-index"  %>
                  <% end %>
                  </div>
                </div>
              </div>
              <div class="separator"></div>
            </div>
          <% end %>